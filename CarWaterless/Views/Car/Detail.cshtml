@section scripts{

    <link href="~/Plesirthemes/lightSlider/css/lightslider.css" rel="stylesheet" />
    <script src="~/Plesirthemes/lightSlider/js/lightslider.js"></script>
    <script>

        $(function () {


            $('#lightSlider').lightSlider({
                gallery: true,
                item: 1,
                loop: true,
                slideMargin: 0,
                thumbItem: 9,
                adaptiveHeight: true,
                prevHtml: '<i class="fas fa-chevron-circle-left" style="color:#00c9a7;font-size:30px"></i>',
                nextHtml: '<i class="fas fa-chevron-circle-right" style="color:#00c9a7;font-size:30px"></i>',
            });


        })


        function editcar(id, customerid) {
            location.href = '../Car/Add?Id=' + id + '&type=Edit&customerid=' + customerid;
        }

    </script>



