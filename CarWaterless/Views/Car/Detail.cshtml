
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_webLayout.cshtml";
}

<style>

    .item ul {
        list-style: none outside none;
        padding-left: 0;
        margin-bottom: 0;
    }

    .item li {
        display: block;
        float: left;
        margin-right: 6px;
        cursor: pointer;
    }

    .item img {
        display: block;
        height: auto;
        max-width: 100%;
        width: 100%;
    }

    .lSAction > a {
        background-image: unset !important;
    }

    .attr {
        border-bottom: 1px solid #ebebeb;
        padding: 20px 0;
    }

    #content{
        background:#fff!important
    }

    body{
        background:#fff!important
    }

</style>

